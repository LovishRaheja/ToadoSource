<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="right"
    android:gravity="right">




    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:id="@+id/conLayout"
       android:visibility="gone"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbubbleout"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:id="@+id/conImage"
                android:src="@drawable/ic_person_black_24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/conName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:id="@+id/conNumber"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:id="@+id/docLayout"
       android:visibility="gone"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbubbleout"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:id="@+id/docImage"
                android:src="@drawable/docsimage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name"

                android:id="@+id/docName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/videoLayout"

        android:visibility="gone"
        android:layout_gravity="right"

        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbubbleout"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"

            android:orientation="vertical">


        <ImageView

            android:layout_width="250dp"
            android:layout_height="180dp"
            android:id="@+id/chatVideo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:layout_marginRight="8dp"
            android:visibility="visible" />
        </LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/vthumb"
            android:id="@+id/vThumb"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/tickVideo"
            android:layout_gravity="bottom|right"

            android:src="@drawable/ic_not_sent_black_24dp"
            android:tint="@color/grey_300"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/mapLayout"

        android:visibility="gone"
        android:layout_gravity="right"
        android:background="@drawable/chatbubbleout"
        android:padding="5dp">
        <ImageView
            android:src="@drawable/chatmap"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/chatMap"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/black"
            android:layout_marginRight="15dp"
            android:visibility="visible" />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/imgchatrel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
android:visibility="gone"
        android:padding="5dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbubbleout"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"

            android:orientation="vertical">

        <ImageView
            android:id="@+id/imgchat"
            android:layout_width="250dp"
            android:layout_height="280dp"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:layout_marginRight="15dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="caption"
            android:textSize="16dp"
            android:id="@+id/caption"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/tickImage"
            android:layout_gravity="bottom|right"

            android:src="@drawable/ic_not_sent_black_24dp"
            android:tint="@color/grey_300"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btndown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/commentString"
            android:layout_gravity="center"
            android:background="#90000000"
            android:src="@drawable/downloadicon"
            android:text="Download"
            android:visibility="gone" />



        <LinearLayout
            android:id="@+id/layonimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iconstar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:gravity="center"
                android:src="@drawable/iconstar2"
                app:layout_anchor="@+id/imgchat" />

            <TextView
                android:id="@+id/timestampnotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:text="2:46 PM"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/status2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="0"
                android:gravity="center"
                android:src="@mipmap/ic_pending" />


        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_gravity="right"
     android:gravity="right"
     android:id="@+id/textLayout"
     android:layout_margin="5dp">
     <TextView
         android:id="@+id/textContentUser"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"


         android:layout_alignParentRight="true"
         android:padding="8dp"
         android:layout_alignParentTop="true"
         android:background="@drawable/chatbubbleout"
         android:layout_marginEnd="5dp"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:layout_marginStart="20dp"
         android:text="a"
         android:layout_toLeftOf="@+id/tick"
      />

     <ImageView
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:id="@+id/tick"

         android:layout_gravity="bottom"
         android:src="@drawable/ic_not_sent_black_24dp"
         android:tint="@color/grey_300"
         android:layout_alignParentRight="true"
         android:layout_marginTop="20dp"
         />

 </LinearLayout>


</LinearLayout>